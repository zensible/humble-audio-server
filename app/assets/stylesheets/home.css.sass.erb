
$bg_media: <%= $theme['bg_media'] %>
$fg_media: <%= $theme['fg_media'] %>
$mode_media: <%= $theme['mode_media'] %>
$link_media: <%= $theme['link_media'] %>
$folder_media: <%= $theme['folder_media'] %>

$bg_devices: <%= $theme['bg_devices'] %>
$fg_devices: <%= $theme['fg_devices'] %>

$bg_playbar: <%= $theme['bg_playbar'] %>
$fg_playbar: <%= $theme['fg_playbar'] %>

$selected_device: <%= $theme['selected_device'] %>

html, body, #view, #content
  height: 100%

  .hand
    cursor: pointer
    cursor: hand

  .ellipsis
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis  

  .play-button, .pause-button
    width: 16px
    height: 16px

  #content
    background: $bg_media

    #loading
      width: 200px
      height: 200px
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      margin: auto
      .uil-default-css
        transform: scale(0.4)

    #loading-small
      width: 50px
      height: 50px
      position: absolute
      top: -50px
      bottom: 0
      right: 120px
      .uil-default-css
        transform: scale(0.4)
        #percent
          padding-top: 80px
          padding-left: 70px
          color: $link_media
          font-size: 30px
  #top
    height: 100%
    width: 100%
    display: flex
    flex-direction: column

    #media-selector
      background: $bg_media
      color: $fg_media
      a
        color: $link_media

      flex: 5 5 80%
      min-height: 40px

      display: flex
      flex-direction: row

      #mode-select
        a
          color: $mode_media
        width: 166px
        font-size: 1.6em
        padding-top: 4px
        padding-left: 8px

        margin-bottom: 1px
        border-right: 1px solid


      #selector2
        flex: 3 1 70%
        overflow-y: visible

        padding-left: 4px

        white-space: nowrap
        text-overflow: ellipsis
        overflow-x: hidden
        font-size: 1.2em
        line-height: 1.5em

        input
          background: $bg_media

        .folder-record
          padding: 2px 8px 2px 8px
          font-size: 1.3em
          line-height: 1.6em

          display: flex
          flex-direction: row

          .folder-playing
            width: 20px
          .folder-name
            flex: 12 12
            a
              color: $folder_media
          .folder-name.back
            a
              color: $fg_devices

        .mp3-record
          padding: 2px 8px 2px 8px
          display: flex
          flex-direction: row
          .mp3-playing
            width: 20px
          .mp3-track-nr
            width: 25px
          .mp3-title
            flex: 10 10
          .mp3-filename
            flex: 8 8
          .mp3-artist
            flex: 6 6
          .mp3-album
            flex: 8 8
          .mp3-year
            flex: 2 2
          .mp3-length-seconds
            flex: 2 2

        .preset-record
          padding: 2px 8px 2px 8px
          display: flex
          flex-direction: row

          .preset-title
            flex: 4 4
          .preset-schedule
            flex: 8 8
            .schedule_days
              width: 160px
          .preset-delete
            flex: 1 1


    #cast-select
      background: $bg_devices
      color: $fg_devices
      a
        color: $fg_devices
      .selected
        color: $selected_device

      border-top: 1px solid
      font-size: 1.3em
      line-height: 1.7em
      td
        padding: 1px 2px 1px 2px

    #playbar
      background: $bg_playbar
      color: $fg_playbar
      a
        color: $fg_playbar

      height: 54px
      display: flex
      flex-direction: row
      border-top: 1px solid
      padding-left: 4px
      padding-top: 4px

      #cur-song
        width: 250px
        #song-name
          font-size: 1.1em
          font-weight: bold
        #current-cast-name
          font-size: 1em
          color: $selected_device

      #play-controls
        width: 160px
        .play-control
          line-height: 46px

          border: 0
          position: relative
          float: left
          &.disabled 
            opacity: .3
            cursor: default
        .play-control-small
          padding: 0px 4px 0px 4px
        .play-control-large
          padding: 0px 8px 0px 8px

      #progress
        flex: 11 11

        #progress-wrapper 
          float: left
          line-height: 46px
          position: relative
          width: 100%
          padding: 10px 0
          margin: 13px 10px 0

        #progress-background 
          width: 100%
          height: 2px
          background-color: #ccc
          position: absolute

        #progress-bar 
          position: absolute
          width: 0px
          height: 2px
          background-color: #f9bb00

      #time-passed
        width: 60px
        height: 46px
        color: #f9bb00
        text-align: right
        float: left
        line-height: 46px

      #playback-duration 
        width: 60px
        height: 46px
        float: left
        line-height: 46px
        color: $fg_playbar
        text-align: right
        padding-right: 8px

      #stop-all
        width: 48px
        height: 100%
        vertical-align: middle
        padding-top: 8px
        padding-right: 8px
        img
          float: right


@media screen and (max-width: 410px)
  .mp3-artist
    display: none

@media screen and (max-width: 500px)
  .mp3-album
    display: none

@media screen and (max-width: 700px)
  .mp3-year
    display: none

@media screen and (max-width: 900px)
  .mp3-length-seconds
    display: none
