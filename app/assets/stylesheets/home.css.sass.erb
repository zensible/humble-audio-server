
//$bg_media: < % = $theme['bg_media'] %>

$fg_a: #bbbcbb
$fg_a_hover: #FFF
$fg_a_selected: #FFF

$bg_mode_select: #101010
$fg_mode_select_a: #bbbcbb
$fg_mode_select_a_hover: #FFF
$fg_mode_select_a_selected: #FFF

$bg_default: linear-gradient(to bottom, #4c4c4c 0px, #131313 400px)

$fg_presets: #bbbcbb
$bg_presets: linear-gradient(to bottom, rgba(0, 0, 1, 0.55) 0%, rgba(0, 0, 0, 1) 60%)

$fg_mp3s: #bbbcbb
$bg_mp3s: linear-gradient(to bottom, rgba(0,0,0,0.75) 0%, rgba(0,0,0,1) 80%)

$fg_radio: #bbbcbb
$bg_radio: linear-gradient(to bottom, rgba(0,0,0,0.75) 0%, rgba(0,0,0,1) 80%)

$fg_settings: #bbbcbb
$bg_settings: linear-gradient(to bottom, #4c4c4c 0px, #131313 400px)

$bg_devices: #2d2d2d
$fg_devices: #bbbcbb

$bg_playbar: #000
$fg_playbar: #fff

$selected_device: #FFF

a
  color: $fg_devices
.selected
  color: $selected_device


html, body, #view, #content
  height: 100%

  .hand
    cursor: pointer
    cursor: hand

  .ellipsis
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis  

  .play-button, .pause-button
    width: 16px
    height: 16px

  color: #FFF
  a
    text-decoration: none
  a
    color: $fg_a
  a:hover
    color: $fg_a_hover
  a.selected
    color: $fg_a_selected

  // Add borders to tables
  .table
    tr
      td
        border-top: 1px solid #333

  #content
    #loading
      width: 200px
      height: 200px
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      margin: auto
      .uil-default-css
        transform: scale(0.4)

    #loading-small
      width: 50px
      height: 50px
      position: absolute
      top: -50px
      bottom: 0
      right: 120px
      .uil-default-css
        transform: scale(0.4)
        #percent
          padding-top: 80px
          padding-left: 70px
          font-size: 30px

  #top
    height: 100%
    width: 100%
    display: flex
    flex-direction: column

    #media-selector
      flex: 5 5 80%
      min-height: 40px
      display: flex
      flex-direction: row

      #mode-select
        background: $bg_mode_select
        a
          color: $fg_mode_select_a
        a:hover
          color: $fg_mode_select_a_hover

        width: 166px
        font-size: 1.6em
        padding-top: 4px
        padding-left: 8px

        margin-bottom: 1px
        border-right: 1px solid

        .select-mode.selected
          color: $fg_mode_select_a_selected

      #mp3s, #radio, #presets, #settings
        flex: 3 1 70%
        overflow-y: visible

        padding-left: 4px

        white-space: nowrap
        text-overflow: ellipsis
        overflow-x: hidden
        font-size: 1.2em
        line-height: 1.5em

        padding-top: 20px

        background: $bg_default

      #mp3s
        color: $fg_mp3s
        #refresh-media
          float: right
          padding-right: 8px
        .folders
          a
            color: #FFF
          .folder-playing
            width: 20px

        a#back-button
          img
            margin-top: -4px
        h3
          color: #FFF

        .mp3-record, .mp3-header
          border-top: 1px solid #333

          padding: 2px 8px 2px 8px
          display: flex
          flex-direction: row
          .mp3-playing
            width: 20px
          .mp3-track-nr
            width: 28px
          .mp3-title
            flex: 10 10
            a
              color: #FFF
          .mp3-filename
            flex: 8 8
          .mp3-artist
            flex: 6 6
          .mp3-album
            flex: 8 8
          .mp3-year
            flex: 2 2
          .mp3-length-seconds
            flex: 2 2

        .mp3-record:hover
          background: #474646

      #radio
        color: $fg_radio
        .mp3-record
          .mp3-playing
            width: 20px
            max-width: 20px

      #presets
        color: $fg_presets

      #settings
        color: $fg_settings


    #cast-select
      background: $bg_devices
      color: $fg_devices
      a
        color: $fg_devices
      .selected
        color: $selected_device

      border-top: 1px solid
      font-size: 1.3em
      line-height: 1.7em
      td
        padding: 1px 2px 1px 2px

    #playbar
      background: $bg_playbar
      color: $fg_playbar
      a
        color: $fg_playbar

      height: 54px
      display: flex
      flex-direction: row
      border-top: 1px solid
      padding-left: 4px
      padding-top: 4px

      #cur-song
        width: 250px
        #song-name
          font-size: 1.1em
          font-weight: bold
        #current-cast-name
          font-size: 1em
          color: $selected_device

      #play-controls
        width: 160px
        .play-control
          line-height: 46px

          border: 0
          position: relative
          float: left
          &.disabled 
            opacity: .3
            cursor: default
        .play-control-small
          padding: 0px 4px 0px 4px
        .play-control-large
          padding: 0px 8px 0px 8px

      #progress
        flex: 11 11

        #progress-wrapper 
          float: left
          line-height: 46px
          position: relative
          width: 100%
          padding: 8px 0
          margin: 13px 10px 0

        #progress-background 
          width: 100%
          height: 4px
          background-color: #494949
          position: absolute

        #progress-bar 
          position: absolute
          width: 0px
          height: 4px
          background-color: #bbbcbb

      #time-passed
        width: 60px
        height: 46px
        color: #bbbcbb
        text-align: right
        float: left
        line-height: 46px

      #playback-duration 
        width: 60px
        height: 46px
        float: left
        line-height: 46px
        color: $fg_playbar
        text-align: right
        padding-right: 8px

      #stop-all
        width: 48px
        height: 100%
        vertical-align: middle
        padding-top: 8px
        padding-right: 8px
        img
          float: right

  #overlay
    background: $bg_default

.arrow-up
  width: 0px
  height: 0px
  border-left: 5px solid transparent
  border-right: 5px solid transparent
  border-bottom: 5px solid #FFF
  display: inline-block
  margin-bottom: 4px

.arrow-down
  width: 0px
  height: 0px
  border-left: 5px solid transparent
  border-right: 5px solid transparent
  border-top: 5px solid #FFF
  display: inline-block
  margin-bottom: 4px

@media screen and (max-width: 410px)
  .mp3-artist
    display: none

@media screen and (max-width: 500px)
  .mp3-album
    display: none

@media screen and (max-width: 700px)
  .mp3-year
    display: none

@media screen and (max-width: 900px)
  .mp3-length-seconds
    display: none
